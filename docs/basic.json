{
    "openapi": "3.0.3",
    "info": {
        "title": "Simple Todos API",
        "description": "A simple todos API",
        "version": "1.0.0",
        "contact": {
            "name": "John doe",
            "email": "john@web.com",
            "url": "web.com"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "local server"
        },
        {
            "url": "http://dev.localhost:3000",
            "description": "dev local server"
        }
    ],
    "tags": [
        {
            "name": "Test"
        },
        {
            "name": "Users",
            "description":"A list of users."
        }
    ],
    "paths": {
        "/ping": {
            "get": {
                "tags": ["Test"],
                "description": "Test description",
                "responses": {
                    "200": {
                        "description": "Test"
                    }
                }
            }
        },
        "/users": {
            "get": {
                "tags": ["Users"],
                "description": "Returns all users from the system that the user has access to",
                "responses": {
                    "200": {
                        "description": "A list of users.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/Users"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "A list of users.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/Users"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": ["Users"],
                "description": "Returns all users from the system that the user has access to",
                "responses": {
                    "201": {
                        "description": "A list of users.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/Users"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": [
                "name",
                "_id",
                "companies"
            ],
            "properties": {
                "_id": {
                    "type": "integer",
                    "uniqueItems": true
                },
                "isPublic": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "books": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "amount": {
                                "type": "number"
                            }
                        }
                    }
                },
                "companies": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "Users": {
            "type": "array",
            "$ref": "#/definitions/User"
        }
    }
}